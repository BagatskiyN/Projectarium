@model Projectarium.Domain.Entities.Request

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Заявка</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
         Название вакансии
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vacancy.Title)
        </dd>

        <dt class="col-sm-2">
            Название проекта
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vacancy.Project.Title)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a href="/Index/@Model.Vacancy.ProjectId">К списку запросов</a>
    </form>
</div>
